<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/left_angle_slit"
        app:layout_constraintLeft_toLeftOf="@+id/left_quarter_guideline"
        app:layout_constraintTop_toTopOf="@id/top_edge_guideline"
        android:layout_marginStart="16dp"
        app:layout_constraintHeight_percent="0.7"
        app:layout_constraintWidth_percent=".15"/>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@color/tacPadBlue"
        app:layout_constraintHeight_percent="0.45"
        app:layout_constraintWidth_percent="0.01"
        app:layout_constraintTop_toTopOf="@id/top_edge_guideline"
        app:layout_constraintLeft_toLeftOf="@id/left_rectangular_slit_guideline"/>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/right_angle_slit"
        android:scaleType="fitXY"
        app:layout_constraintHeight_percent="0.76"
        app:layout_constraintWidth_percent="0.07"
        android:paddingTop="8dp"
        app:layout_constraintTop_toTopOf="@id/top_five_percent_guideline"
        app:layout_constraintLeft_toLeftOf="@id/left_ninety_percent_guideline"/>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@color/tacPadBlue"
        app:layout_constraintHeight_percent="0.01"
        app:layout_constraintWidth_percent="0.19"
        app:layout_constraintTop_toTopOf="@id/top_thirty_percent_guideline"
        app:layout_constraintLeft_toLeftOf="@id/left_three_quarters_guideline"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/left_quarter_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/left_rectangular_slit_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.42" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/left_three_quarters_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/left_ninety_percent_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.91" />

    <!--    Horizontal Guidelines -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/top_edge_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="16dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/top_five_percent_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/top_thirty_percent_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3"/>

</androidx.constraintlayout.widget.ConstraintLayout>